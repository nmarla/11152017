<!DOCTYPE html>

<html>
<head>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap-datepicker.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/font-awesome.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Custom.css")" rel="stylesheet" />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#empmenu" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#" style="padding-top: 5px;">
                    <img src="~/Images/CTSWhiteLogo.png" />
                </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="empmenu">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink(" ", "DisplayData", "Search", null, new {@class = "glyphicon glyphicon-home" })</li>
                    <li>@Html.ActionLink("Correspondence", "TrackingInfo", "Tracking")</li>
                    <li>@Html.ActionLink("Reports", "TrackingInfo", "Tracking")</li>
                    <li>@Html.ActionLink("Logout", "Login", "Login")</li>
                    
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>
    <div class="container body-content">
        @{ Html.RenderAction("Index", "UserDetails");}
        @RenderBody()
        <hr />

    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-xs-3">
                    <img src="~/Images/aginglogowhite.png" class="img-responsive" />
                </div>
                <div class="col-xs-9 text-right copyright">
                    All Rights Reserved 2017
                </div>
            </div>
        </div>
    </footer>
    <script src="@Url.Content("~/Scripts/jquery-3.2.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/moment.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-datepicker.min.js")"></script>
    @* @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)*@
    <script defer="defer">
        $(function () {
            dateRange();
        });
        function dateRange() {
            var date = new Date();
            var today = new Date(date.getFullYear(), date.getMonth(), date.getDate());
            var daysback = new Date(date.getFullYear(), date.getMonth(), date.getDate() - 30);
           
            $('.dtreceived').datepicker({
                autoclose: true,
                endDate: new Date(),
                format: 'MM dd yyyy'
            }).datepicker('setDate', today);

            $('.dtEntrd').datepicker({
                autoclose: true,
                startDate: today,
                endDate: new Date(),
                format: 'MM dd yyyy'
            }).datepicker('setDate', today);

            $('.dtcc').datepicker({
                autoclose: true,
                startDate: today,
                format: 'MM dd yyyy'
            }).datepicker('setDate', today);

            $('.dtMayor').datepicker({
                autoclose: true,
                startDate: today,
                format: 'MM dd yyyy'
            }).datepicker('setDate', today); 
            $('.dtReferral').datepicker({
                autoclose: true,
                startDate: today,
                format: 'MM dd yyyy'
            }).datepicker('setDate', today);
            
            $('.icon-arrow-left').addClass('glyphicon glyphicon-chevron-left');
            $('.icon-arrow-right').addClass('glyphicon glyphicon-chevron-right');

        }
    </script>
</body>
</html>


