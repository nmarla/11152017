@using GridMvc.Html
@model IEnumerable<CTSImp1.Models.CorrCompInfo>
@{
    ViewBag.Title = "DisplayData";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />*@
<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>
<div class="col-lg-12 padding-side-none">
    <div class="row-fluid" style="height: 10px;">&nbsp;</div>
    <div class="panel panel-default">
        <div class="panel-body">
            @Html.Grid(Model).Columns(columns =>
       {
           columns.Add(c => c.cc_number).Titled("Ticket No.")
           .Filterable(true)
           .Sanitized(false)
           .Encoded(false)
           .RenderValueAs(model => Html.ActionLink(model.cc_number.ToString(),"DetailReport", "Tracking", new { ccnumber = model.cc_number }, null).ToHtmlString());
           columns.Add(c => c.cc_recdin).Titled("Complaint From").Sortable(true);
           columns.Add(c => c.cc_status).Titled("Status").Sortable(true);
       }).WithPaging(10).Sortable(true)
        </div>
    </div>
    <input type="button" value="New" onclick="location.href='@Url.Action("TrackingInfo", "Tracking")'" />

</div>
